@model List<Product>

<h1>Product</h1>
<hr />

<a class="btn btn-primary" asp-controller="Product" asp-action="Create">Add New</a>
<br />
<br />

@if (Model.Any())
{
    <table class="table table-hover">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Image</th>
            <th>Category</th>
            <th>Carated At</th>
        </tr>
        @foreach (var product in Model)
        {
            <tr>
                <th>@product.Id</th>
                <th>@product.Name</th>
                <th>@product.Price</th>
                <th>
                    <img class="img-fluid" width="200" src="~/Images/@product.ImageUrl"/>
                </th>
                <th>@product.Category.Name</th>
                <th>@product.CreatedAt.ToString("yyyy/MM/dd")</th>
            </tr>
        }
    </table>
}
else
{
    <div class="alert alert-warning">
        No Data In Our Database !
    </div>
}