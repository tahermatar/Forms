@model List<Category>

<h1>Category</h1>
<hr />

<a class="btn btn-primary" asp-controller="Category" asp-action="Create">Add New</a>
<br />
<br />

@*this is to index action*@

@*<h1>@ViewBag.msg</h1>*@
@*<h1>@ViewData["msg"]</h1>*@
@*<h1>@TempData["msg"]</h1>*@

@*this is to create action*@
<h1>@TempData["msg"]</h1>

@if (Model.Any())
{
    <table class="table table-hover">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Carated At</th>
            <th>Actions</th>
        </tr>
        @foreach (var category in Model)
        {
            <tr>
                <th>@category.Id</th>
                <th>@category.Name</th>
                <th>@category.CreatedAt.ToString("yyyy/MM/dd")</th>
                <th>
                    <a class="btn btn-warning" href="~/Category/Update/@category.Id">Update</a>
                    <a class="btn btn-danger" href="~/Category/Delete/@category.Id">Delete</a>
                </th>
            </tr>
        }
    </table>
}
else
{
    <div class="alert alert-warning">
        No Data In Our Database !
    </div>
}